public class Main{
    public static void main(String[] args){
        int[] arr = {2,1,3,4};
        for(int i=0;i<arr.length-1;i++){
            int SI = i;
            for(int j=i+1;j<arr.length;j++){
                if(arr[j]<arr[SI]){
                    SI=j;
                }
            }
            int temp=arr[i];
            arr[i]=arr[SI];
            arr[SI]=temp;
        }
       for(int num:arr){
        System.out.print(num +" ");
       }
    }
}
