class Solution {
    public int[] twoSum(int[] nums, int target) {
        HashMap<Integer,Integer> map = new HashMap<>();
        int[] arr = new int[2];
    
        int sum=0; int j=0;
        for(int i=0;i<nums.length;i++){
            sum=target-nums[i];
            if(map.containsKey(sum)){
               arr[j++]=map.get(sum);
               arr[j]=i;
            }
            else{
                map.put(nums[i],i);
            }
        }
        return arr;
    }
}
