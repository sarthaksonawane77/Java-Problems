class Solution {
    public double myPow(double x, int n) {
       long binary = n; double ans=1;
       if(x==0) return 0;
       if(n==0) return 1;
       if(n<0){
        binary=-binary;
        x=1/x;
       }
       while(binary>0){
         if(binary%2==1){
            ans=ans*x;
         }
         x=x*x;
         binary=binary/2;
       }
       return ans;
    }
}
