class Solution {
    public ListNode rotateRight(ListNode head, int k) {
        if(head==null || head.next==null)return head;
        if(k==0)return head;
        ListNode current=head; int size=0; ListNode tail=null;
        while(current!=null){
            tail=current;
            current=current.next;
            size++;
        }
        if(k>size) k=k%size;
        int L=size-k; 
       //making list circular
       tail.next=head;

       //traversing pointers
       while(L>0){
        head=head.next;
        tail=tail.next;
        L--;
       }
       tail.next=null;
       return head;
    }
}
